<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pawe.firstdb.AddUserActivity">
    <EditText
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Imie"
        android:id="@+id/editTextImie"
        android:inputType="textPersonName"
        android:textSize="40dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:minWidth="165dp"
        android:layout_height="wrap_content"
        android:hint="Wiek"
        android:inputType="numberDecimal"
        android:id="@+id/editTextWiek"
        android:layout_below="@id/editTextImie"
        android:textSize="40dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:onClick="addToDatabase"
        android:id="@+id/buttonDodaj" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewZdj"
        android:layout_below="@+id/editTextWiek"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonDodaj"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_photo_camera_black_24dp"
        android:layout_alignBottom="@id/editTextWiek"
        android:id="@+id/buttonCamera"
        android:layout_below="@+id/editTextImie"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:onClick="takePhoto"/>

</RelativeLayout>
